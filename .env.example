# PushChain E-Ticketing Platform - Environment Configuration
# Copy this file to .env and fill in your values

# IMPORTANT: NEVER commit .env to git!

# PushChain Network Configuration
VITE_PUSHCHAIN_RPC_URL=https://evm.rpc-testnet-donut-node1.push.org/
VITE_PUSHCHAIN_CHAIN_ID=50311
VITE_PUSHCHAIN_EXPLORER_URL=https://testnet.explorer.push.org/

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Pinata Configuration (for IPFS uploads)
# Get API keys from: https://app.pinata.cloud/developers/api-keys
VITE_PINATA_JWT=
VITE_PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# Google Maps API Key (for venue search)
# Get from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=

# Smart Contract Addresses (update after deployment to PushChain)
VITE_EVENT_TICKET_CONTRACT=
VITE_USER_PROFILE_CONTRACT=
VITE_EVENT_ORGANIZER_CONTRACT=
VITE_NOTIFICATION_CONTRACT=
VITE_TICKET_VALIDATOR_CONTRACT=

# Web3Forms Configuration (for email reminders)
# Get access key from: https://web3forms.com
VITE_WEB3FORMS_KEY=1c938d7e-0c4f-4b5f-8855-c79a647f8211

# Feature Flags
VITE_ENABLE_DYNAMIC_PRICING=true
VITE_HACKATHON_MODE=true

# Note: Event contracts are deployed using user's connected wallet

