}

// Parse check-in point QR code
const parseCheckInPointQR = (qrData: string): CheckInPointData | null => {
  try {
    // Expected format: "checkin:contractAddress.contractName"
    if (!qrData.startsWith('checkin:')) {
      return null;
    }
    
    const cleanData = qrData.trim();
    const afterPrefix = cleanData.substring(8);
    const contractId = afterPrefix.split(':')[0];
    const [contractAddress, contractName] = contractId.split('.');

    if (!contractAddress || !contractName) {
      return null;
    }

    return {
      contractAddress,
      contractName,
    };
  } catch (error) {
    return null;
  }
};

// Real check-in function using smart contract
const checkInTicket = async (
  contractAddress: string,
  tokenId: number,
  wallet: any
): Promise<CheckInResult> => {
  try {
    // Get provider and signer
    const provider = new ethers.BrowserProvider(window.ethereum);
    const signer = await provider.getSigner();
    
    // Create contract instance
    const contract = new ethers.Contract(contractAddress, EventTicketABI.abi, signer);
    
    // Check if ticket is already used
    const isUsed = await contract.isTicketUsed(tokenId);
    if (isUsed) {
      return {
        success: false,
        message: 'Ticket has already been used',
        status: 'already_used'
      };
    }
    
    // Check if user owns the ticket
    const owner = await contract.ownerOf(tokenId);
    if (owner.toLowerCase() !== wallet.address.toLowerCase()) {
      return {
        success: false,
        message: 'You are not the owner of this ticket',
        status: 'not_owner'
      };
    }
    
    // Execute check-in transaction
    const tx = await contract.useTicket(tokenId);
    
    // Wait for transaction confirmation
    const receipt = await tx.wait();
    
    if (receipt.status === 1) {
      return {
        success: true,
        txHash: receipt.hash,
        message: 'Check-in successful! Ticket marked as used.',
        status: 'success'
      };
    } else {
      return {
        success: false,
        message: 'Transaction failed',
        status: 'failed'
      };
    }
    
  } catch (error: any) {
    console.error('Check-in error:', error);
    
    let message = 'Check-in failed';
    if (error.message?.includes('already used')) {
      message = 'Ticket has already been used';
    } else if (error.message?.includes('already ended')) {
      message = 'Event has already ended';
    } else if (error.message?.includes('cancelled')) {
      message = 'Event has been cancelled';
    } else if (error.message?.includes('rejected')) {
      message = 'Transaction was rejected by user';
    }
    
    return {
      success: false,
      message,
      status: 'error'
    };
  }
};

